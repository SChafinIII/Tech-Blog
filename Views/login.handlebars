<div class="card flex-column">
    <h2 class="card-header">Please enter username and password to log in</h2>
    <form id="login-form" class="card-body">
        <div class="mb-6">
            <label for="username" class="form-label">Username</label>
            <input placeholder="Enter username" type="username" class="form-control" id="username-login">
            <div id="usernameHelp" class="form-text">We won't share your email!.</div>
        </div>

        <div class="mb-6">
            <label for="password" class="form-label">Password</label>
            <input placeholder="Enter password" type="password" class="form-control" id="password-login">
            <div id="passwordHelp" class="form-text">Must be at least 4 digits long.</div>
        </div>

        <div class="mb-6">
            <a href="/signup">Don't have an account? Signup here</a>
        </div>

        <button type="submit" class="btn btn-primary" id="login-btn">Log In</button>
    </form>
</div>
<script src="js/login.js"></script>